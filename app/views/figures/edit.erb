<h1>Edit Figure </h1>


<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">

  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></br>

  <h3>Edit Titles</h3><br>
  <%Title.all.each do |title| %>
  <label><%= title.name %></label>
  <input type="checkbox" name="figure[title_ids][]" id="<%=title.name%>" value="<%=title.id%>" <%="checked" if @figure.titles.include?(title)%>><%end%><br>

  <h3>Create a New Title</h3>
  <label>Name:</label>
  <input type="text" name="title[name]" id="new_title"></br>
<br>
  <h3>Edit Landmarks</h3>
  <%Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
  <input type="checkbox" name="figure[landmark_ids][]" id="<%=landmark.name%>" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>><br>
  <%end%>
<br>
  <h3>Create a New Landmark</h4>
  <label>Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark"></br>
    <label>Year Completed:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed"></br>

  <input type="submit" id="Edit Figure" value="Edit Figure">

</form>
